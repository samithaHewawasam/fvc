#include <iostream>
#include <fstream>
#include <string>
using namespace std;

class File
{
  string line[50][2];
  string lineOne;
  string lineTwo;
  public:
    void readFile(string firstFile, string secondFile) {
        ifstream fileOne;
        ifstream fileTwo;

        fileOne.open(firstFile);
        fileTwo.open(secondFile);
        int x=0;
        int y=0;
        while(getline(fileOne, lineOne)) {
          line[x][0] = lineOne;
          x++;
        }
        while(getline(fileTwo, lineTwo)) {
          line[y][0] = lineTwo;
          y++;
        }

        for(int i=0; sizeof(line);i++){
          cout<<line[i][0]<<endl;
        }
    };
};

int main(int argc, char *argv[]) {
    File getFile;
    getFile.readFile(argv[1], argv[2]);
}
